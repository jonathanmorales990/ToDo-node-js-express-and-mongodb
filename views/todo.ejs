<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>

        <link rel='stylesheet' type="text/css" href="/vendor/bootstrap/dist/css/bootstrap.css" />
        <link rel='stylesheet' type="text/css" href='/stylesheets/style.css' />
        <link rel='stylesheet' type="text/css" href='/stylesheets/todo.css' />

        <script src="/vendor/jquery/dist/jquery.min.js"></script>
        <script src="/vendor/jquery-ui/jquery-ui.min.js"></script>
        <script src="/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="/javascripts/addTodo.js"></script>
        <script src="/javascripts/addToDone.js"></script>
        <script src="/javascripts/removeTodo.js"></script>

    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="todolist not-done">
                     <h1>Tarefas</h1>
                        <input type="text" class="form-control add-todo todo-input" placeholder="Adicionar">
                            <button id="add-new-todo" class="btn btn-success">Adicionar</button>
                            <img class="add-todo-loading" src="/images/loading.gif">
                            <!--<img class="add-as-done-loading" src="/images/loading.gif"> -->
                            <!--<img class="remove-todo-loading" src="/images/loading.gif"> -->
                            <hr>
                            <ul id="sortable" class="list-unstyled" style="overflow-y:scroll; height: 230px;">
                                <% var count = 0; %>
                                <% for (let i=0; i < todos.length; i++) { %>
                                    <% if (todos[i].done == false) { %>
                                        <% count += 1; %>
                                        <li class="ui-state-default">
                                            <div class="checkbox">
                                                <label>
                                                    <button id="<%= todos[i]._id %>" class="item btn btn-default btn-xs pull-left add-as-done">
                                                        <span class="glyphicon glyphicon-ok"></span>
                                                    </button>
                                                    <span style="margin-left: 5px; line-height: 1.7;"><%= todos[i].todo %></span>
                                                </label>
                                            </div>
                                        </li>
                                    <% } %>
                                <% } %>
                            </ul>
                            <div class="todo-footer">
                                <strong><span class="count-todos"> <%= count %> </span></strong> Itens restantes
                            </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="todolist">
                     <h1>JÃ¡ Feita</h1>
                        <ul id="done-items" class="list-unstyled" style="overflow-y:scroll; height: 375px;">
                            <% for (let i=0; i < todos.length; i++) { %>
                                <% if (todos[i].done == true) { %>
                                     <li><%= todos[i].todo %> <button id="<%= todos[i]._id %>" class="remove-item btn btn-default btn-xs pull-right"><span class="glyphicon glyphicon-remove"></span></button></li>
                                <% } %>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>